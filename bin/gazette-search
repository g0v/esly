#!/usr/bin/env perl
use v5.16;

use utf8;
use Term::ANSIColor;

use Esly;

binmode STDIN, ":utf8";
binmode STDOUT, ":utf8";

my $q = shift(@ARGV) || "q = ?";

utf8::decode($q);

my $app = Esly->new;

my $res = $app->search( $q );

if ($res->{hits}{total}) {
    for my $hit (@{ $res->{hits}{hits} }) {
        say $hit->{_source}{speaker};
        for my $line (@{ $hit->{highlight}{content} }) {
            $line =~ s!<em>!color 'bold red'!eg;
            $line =~ s!</em>!color 'reset'!eg;
            say "  - $line";
        }
        say "";
    }
}
else {
    say "No Results";
}
